{
  "manifest_version": 3,
  "name": "YouTube Auto Skipper",
  "version": "1.0",
  "description": "Automatically clicks the 'Skip' button on YouTube ads.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["https://www.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {}
}
